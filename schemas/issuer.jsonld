{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openamber.eu/schemas/issuer. json",
  "title": "OpenAmber Issuer Profile",
  "description": "Schema for issuer organization profiles",
  "type": "object",
  "required": [
    "@context",
    "type",
    "id",
    "name",
    "country",
    "publicKey"
  ],
  "properties":  {
    "@context": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "contains": {
        "const": "https://openamber.eu/ns/v1"
      }
    },
    "type": {
      "const": "IssuerProfile"
    },
    "id":  {
      "type": "string",
      "format": "uri",
      "description": "Issuer's OpenAmber profile URL"
    },
    "name": {
      "type": "string",
      "maxLength":  200,
      "description": "Organization name"
    },
    "country": {
      "type":  "string",
      "pattern":  "^[A-Z]{2}$",
      "description":  "ISO 3166-1 alpha-2 country code"
    },
    "organizationType": {
      "type": "string",
      "enum": ["police", "hotline", "ngo", "government"],
      "description": "Type of organization"
    },
    "website": {
      "type": "string",
      "format": "uri",
      "description": "Organization's public website"
    },
    "contact": {
      "type": "string",
      "format": "email",
      "description": "Contact email for OpenAmber-related inquiries"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+[0-9]{1,15}$",
      "description": "Contact phone number in E.164 format"
    },
    "description": {
      "type": "string",
      "maxLength":  1000,
      "description": "Brief description of organization and mandate"
    },
    "publicKey": {
      "$ref": "#/$defs/publicKey"
    },
    "vouches": {
      "type":  "array",
      "items":  {
        "type": "string",
        "format": "uri"
      },
      "description": "URLs to vouch documents from trusted anchors"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "When this profile was created"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "When this profile was last updated"
    }
  },
  "$defs": {
    "publicKey":  {
      "type": "object",
      "required": ["type", "publicKeyMultibase"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "Key identifier URL"
        },
        "type": {
          "const": "Ed25519VerificationKey2020"
        },
        "controller": {
          "type": "string",
          "format": "uri",
          "description": "Entity that controls this key"
        },
        "publicKeyMultibase": {
          "type": "string",
          "pattern": "^z[1-9A-HJ-NP-Za-km-z]+$",
          "description": "Base58-encoded public key with multibase prefix"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "When this key was created"
        },
        "expires":  {
          "type": "string",
          "format": "date-time",
          "description":  "When this key expires (optional)"
        },
        "revoked": {
          "type":  "string",
          "format": "date-time",
          "description":  "When this key was revoked (null if active)"
        }
      }
    }
  }
}
